<h1>My Tasks</h1>
<ul>
<% @tasks.each do |task| %>
<%# création d'un lien: texte du lien => titre de la tache; la tâche en question%>
<li><%= link_to task.title, task_path(task) %> || <%= link_to "Delete", task_path(task), data:{turbo_method: :delete, turbo_confirm: "are you sure?"} %></li>
<% end %>
</ul>
<br/>
<%= link_to "Add new task", "tasks/new" %>
